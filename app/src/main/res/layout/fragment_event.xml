                android:text="End at" />

            <TextView
                android:id="@+id/endtime_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/end_time2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:paddingBottom="5dp"
                android:text="20:00"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/venue_text2"
                android:padding="10dp"
                android:text="Description" />

            <TextView
                android:id="@+id/description_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description2"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:text="Daily Activities!!"
                android:textSize="20sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/endtime_text2"
                android:layout_margin="15dp"
                android:text="Participate" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
