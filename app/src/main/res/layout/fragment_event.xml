<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.harixth.eventhost.EventFragment">

    <!-- A CardView That contain the event-->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <ImageView
                android:id="@+id/event_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/event_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/event_icon"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="2dp"
                android:text="Soccer" />

            <TextView
                android:id="@+id/event_creator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/event_icon"
                android:layout_below="@+id/event_tittle"
                android:layout_marginLeft="2dp"
                android:text="hosted by Muhammad" />

            <TextView
                android:id="@+id/people_attend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                android:text="18 people \n is attending"
                android:textAlignment="center"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="75dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="175dp">

            <TextView
                android:id="@+id/venue_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Venue" />

            <TextView
                android:id="@+id/venue_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/venue_head"
                android:layout_marginLeft="15dp"
                android:paddingBottom="5dp"
                android:text="Highfield Park"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/end_time"
                android:padding="10dp"
                android:text="Start at" />

            <TextView
                android:id="@+id/starttime_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_time"
                android:layout_toLeftOf="@+id/endtime_text"
                android:layout_marginRight="12dp"
                android:paddingBottom="5dp"
                android:text="18:00"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:padding="10dp"
                android:text="End at" />

            <TextView
                android:id="@+id/endtime_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/end_time"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:paddingBottom="5dp"
                android:text="20:00"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/venue_text"
                android:padding="10dp"
                android:text="Description" />

            <TextView
                android:id="@+id/description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:text="Daily Activities!!"
                android:textSize="20sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/endtime_text"
                android:layout_margin="15dp"
                android:text="Participate" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
